var hasPathSum = function(root, sum) {
    if(root == null){
        console.log('root = null sum',sum)    
        return false
    }
    if(root.left == null && root.right == null){
        console.log('leaf sum',sum);
        if(sum - root.val == 0){
            return true
        }else{
            return false  
        }
    }
    sum -= root.val
    return hasPathSum(root.left, sum) || hasPathSum(root.right, sum)
};


/*
